{
  "compilerOptions": {
    "module": "commonjs",                   // Use CommonJS for Node.js compatibility
    "moduleResolution": "node",             // Resolves modules like Node.js
    "target": "ES2023",                     // Use modern JavaScript
    "esModuleInterop": true,                // Enable interop between CommonJS and ES modules
    "experimentalDecorators": true,         // Allow decorators (required for TypeORM)
    "emitDecoratorMetadata": true,          // Emit metadata for decorators
    "allowSyntheticDefaultImports": true,   // Allow default imports in non-ESM modules
    "strict": true,                         // Enable strict type checking
    "skipLibCheck": true,                   // Skip type checking for node modules
    "sourceMap": true,                      // Enable source maps for debugging
    "declaration": true,                    // Generate declaration files
    "outDir": "./dist",                     // Output directory for compiled JS files
    "baseUrl": "./",                        // Base directory for resolving modules
    "incremental": true,                    // Enable incremental compilation
    "resolvePackageJsonExports": true,      // Allow resolution of package.json exports
    "isolatedModules": true,
    "strictPropertyInitialization": false// Ensures each file can be compiled independently
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
